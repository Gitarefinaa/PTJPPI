<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertAsset">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/form_background_back"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:layout_gravity="center_vertical"

            android:layout_margin="30dp"
            android:background="@drawable/form_background"
            android:orientation="vertical"
            android:padding="10dp">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="630dp"
                        android:layout_margin="30dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:fontFamily="@font/poppinsmedium"
                            android:id="@+id/jenis_mesin"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center_horizontal"
                            android:text="Inspection damage"
                            android:textAlignment="center">

                        </TextView>


                        <EditText
                            android:id="@+id/desc"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:backgroundTint="#D1C9C9"
                            android:fontFamily="@font/poppinslight"
                            android:hint="Engine HM"
                            android:inputType="textPassword"
                            android:paddingLeft="20dp"
                            android:textColorHint="#0E0909"
                            android:textSize="14sp"  />

                        <EditText
                            android:id="@+id/Deskripsi"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:backgroundTint="#D1C9C9"
                            android:fontFamily="@font/poppinslight"
                            android:hint="Container counter"
                            android:inputType="textPassword"
                            android:paddingLeft="20dp"
                            android:textColorHint="#0E0909"
                            android:textSize="14sp"  />





                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="380dp"
                            >


                            <Button
                                android:id="@+id/InputDamage"
                                style="@android:style/Widget.Button.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"

                                android:fontFamily="@font/poppinsreguller"
                                android:text="Save"
                                android:layout_alignParentRight="true" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>




        </LinearLayout>


    </LinearLayout>

</LinearLayout>